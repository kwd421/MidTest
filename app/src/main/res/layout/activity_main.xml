<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:padding="4dp"
        android:background="#00f"
        android:src="@drawable/GROZA"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_first"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/btn_first"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="스마트 앱 프로그래밍"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_avatar"
        app:layout_constraintTop_toTopOf="@id/img_avatar"/>
    <Button
        android:id="@+id/btn_second"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2023년 중간고사"
        app:layout_constraintEnd_toEndOf="@id/btn_first"
        app:layout_constraintStart_toStartOf="@id/btn_first"
        app:layout_constraintBottom_toBottomOf="@id/img_avatar"/>
    <Button
        android:id="@+id/btn_third"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="그로자 이미지"
        app:layout_constraintEnd_toEndOf="@id/btn_first"
        app:layout_constraintStart_toStartOf="@id/img_avatar"
        app:layout_constraintTop_toBottomOf="@id/img_avatar"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="그로자 텍스트"
        app:layout_constraintEnd_toEndOf="@id/btn_first"
        app:layout_constraintStart_toStartOf="@id/img_avatar"
        app:layout_constraintTop_toBottomOf="@id/btn_third"/>
</androidx.constraintlayout.widget.ConstraintLayout>